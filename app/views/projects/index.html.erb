<style>
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .navbar-custom {
    background-color: #007bff;
  }

  .navbar-custom .navbar-brand,
  .navbar-custom .nav-link {
    color: white;
  }

  .navbar-custom .navbar-nav .nav-item.active .nav-link {
    font-weight: bold;
  }

  .hero-section {
    background-color: #f7f9fc;
    padding: 60px 0;
    text-align: center;
  }

  .hero-section h1 {
    font-size: 3rem;
    color: #007bff;
  }

  .projects-table th {
    background-color: #007bff;
    color: white;
  }

  .projects-table tbody tr:hover {
    background-color: #f1f1f1;
  }

  .footer {
    background-color: #343a40;
    color: white;
    padding: 20px 0;
    margin-top: auto; /* Ensures footer stays at the bottom */
  }

  .footer a {
    color: #17a2b8;
  }
</style>

<!-- Navigation bar -->
<nav class="navbar navbar-expand-lg navbar-custom">
  <a class="navbar-brand" href="#">Project Management</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item active">
        <%= link_to 'Create New Project', new_project_path, class: 'nav-link' %>
      </li>
    </ul>
  </div>
</nav>

<!-- Hero Section -->
<div class="hero-section">
  <h1>Welcome to Project Management</h1>
  <p class="lead text-muted">Your projects, your way. Manage everything in one place.</p>
</div>

<!-- Projects List -->
<div class="container mt-5">
  <% if @projects.any? %>
    <table class="table table-striped table-bordered projects-table">
      <thead>
        <tr>
          <th>Project Name</th>
          <th>Description</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td><%= project.description %></td>
            <td><%= project.status %></td>
            <td>
              <%= link_to 'View', project_path(project), class: 'btn btn-info btn-sm' %>
              <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Delete', project_path(project), method: :delete, data: { confirm: 'Are you sure you want to delete this project?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-warning">
      No projects available. <%= link_to 'Create a new project', new_project_path, class: 'alert-link' %>
    </div>
  <% end %>
</div>

<!-- Footer -->
<footer class="footer text-center">
  <p>Powered by <a href="https://rubyonrails.org" target="_blank">Ruby on Rails</a> | Built with <a href="https://getbootstrap.com" target="_blank">Bootstrap</a></p>
</footer>